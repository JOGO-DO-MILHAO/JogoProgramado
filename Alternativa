package com.mycompany.jogodomilhao;

/**
 *
 * @author 324149373
 */
public class Alternativa {
     
        
       
        protected boolean correta;
        protected String alternativas;
        
        protected Alternativa( String alternativas, boolean correta){
        this.correta = correta;
        this.alternativas=alternativas;
   
        } 
   
     public String getAlternativas(){
             
         return alternativas;
         /**
          * Método getAlternativas
          * @return String de alternativas
          */
        }
     
     public void setAlternativas(String alternativas){
     this.alternativas = alternativas;
        /**
         *  Método setAlternativas 
         * @param String  alternativas  , ou seja s opções.
         */
        }
      public boolean isCorreta() {
        return correta;
        /**
         * isCorreta
         * @return a resposta correta.
         */
    }
        @Override 
        public String toString(){
            return alternativas;
            /**
             * Metodo toString 
             * @return as alternativas transcrevidas.
             */
            
        }
        
    
    }
    

